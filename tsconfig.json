{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "lib": ["ES2016"],
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "./node_modules",
        "./**/*/*.d.ts"
    ]
}